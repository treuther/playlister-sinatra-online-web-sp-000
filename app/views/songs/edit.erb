<!-- This page needs a form to change details about a song - genre and artist. -->
<h1>Add a New Song</h1>

<form action='/songs/<%=@song.slug%>' method="post">
  <input type="hidden" value="patch" name="_method">
  <label> Name: </label>
  <input type="text" name="song[name]" value="<%=@song.name%>" id="Name">
  <br>

  <label>Artist Name:</label>
  <input type="text" value="<%=@song.artist.name%>" id="Artist Name" name="artist[name]">
  <br>

  <label>Genres:</label>
    <% Genre.all.each do |genre| %>
    <input type="checkbox" <%= 'checked' if @song.genres.include?(genre) %> name="genres[]" id="<%= genre.name %>" value="<%= genre.id %>"><%= genre.id %></input><br>
    <% end %>
<br>

  <input type="submit" value="Save">


</form>
